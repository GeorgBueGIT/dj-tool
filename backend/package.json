{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server",
    "dev": "nodemon server",
    "test": "jest --coverage --watch --runInBand",
    "test:ci": "jest --coverage --watchAll=false --runInBand"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.10.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "src/config/"
    ],
    "watchPathIgnorePatterns": [
      "node_modules/",
      "/config",
      "dist/",
      "coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageReporters": [
      "cobertura",
      "json",
      "lcov",
      "text"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.js?$",
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules/",
      "coverage/"
    ]
  }
}
